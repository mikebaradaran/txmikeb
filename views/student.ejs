<body>
    <input type="text" id="name" placeholder="Enter your name" /><br />
    <input type="text" id="message" placeholder="Type then press Enter/‚ñ∂Ô∏è" />
    <span onclick="sendMessage()" id="sendMessage">‚ñ∂Ô∏è</span>
    <div id="emojis"></div>

    <div id="messages"></div>
    <script>
        const serverURL = '<%= commonData.appName %>';
      
        const txtName = document.getElementById("name");
        const txtMessage = document.getElementById("message");
      
        const socket = io(serverURL);
        socket.on("connection");

        function sendMessage() {
            if (txtName.value.trim().length == 0) {
                alert('Please enter a name!')
                txtName.focus();
                return;
            }
            let msg = {
                name: txtName.value,
                body: txtMessage.value,
            };
            socket.emit("message", msg);
            txtMessage.value = "";
            txtMessage.focus();
        };

        txtMessage.addEventListener("keyup", (event) => {
            if (event.keyCode === 13) {
                sendMessage();
            }
        });

        // ---------- Emojis ---------------------------------
        function emojiClick(e) {
            txtMessage.value += e.innerHTML;
            txtMessage.focus();
        }
        function getEmojis() {
